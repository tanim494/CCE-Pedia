<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bgg"
    tools:ignore="ExtraText">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
    android:alpha="0.6"
android:padding="16dp">

    <TextView
        android:id="@+id/noticeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#FFFF"
        android:text="Notice Box"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:background="@drawable/notbg"
        />

    <TextView
        android:id="@+id/updateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#FFFF"
        android:visibility="gone"
        android:textAlignment="center"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:background="@drawable/notbg"
        />

    <ImageButton
        android:id="@+id/introductionButton"
        android:layout_width="wrap_content"
        android:layout_height="400px"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:layout_marginBottom="50px"
        android:alpha="10"
        android:background="@drawable/rounded_button"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/intro"
        android:visibility="visible"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/facultyButton"
        android:layout_width="wrap_content"
        android:layout_height="400px"
        android:layout_gravity="center"
        android:layout_marginBottom="50px"
        android:background="@drawable/rounded_button"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/faculty" />



    <ImageButton
        android:id="@+id/resourcesButton"
        android:layout_width="wrap_content"
        android:layout_height="400px"
        android:layout_gravity="center"
        android:layout_marginBottom="50px"
        android:background="@drawable/rounded_button"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/resources" />

    <ImageButton
        android:id="@+id/authorButton"
        android:layout_width="wrap_content"
        android:layout_height="400px"
        android:layout_gravity="center"
        android:layout_marginBottom="50px"
        android:background="@drawable/rounded_button"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/author" />

</LinearLayout>
    </ScrollView>
