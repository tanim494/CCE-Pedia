<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:background="@drawable/default_bg">

    <TextView
        android:id="@+id/openDriveLinks"
        style="@style/ButtonStyle"
        android:text="Drive Links" />

    <TextView
        android:id="@+id/openSemesterResourcesPage"
        style="@style/ButtonStyle"
        android:text="Semester Wise Resources" />

    <TextView
        android:id="@+id/batchWise"
        style="@style/ButtonStyle"
        android:text="Batch Wise Resources"/>


    <TextView
        android:id="@+id/openBusPage"
        style="@style/ButtonStyle"
        android:text="Bus Schedule"/>

    <TextView
        android:id="@+id/openFacebookPage"
        style="@style/ButtonStyle"
        android:text="CCE Club Facebook Page"/>

    <TextView
        android:id="@+id/openFacebookFemPage"
        style="@style/ButtonStyle"
        android:text="CCE Club Female Chapter Facebook Page" />


</LinearLayout>
