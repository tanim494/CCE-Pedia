<resources>
    <!-- Base application theme. -->
    <style name="Theme.CCEPedia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#738F73</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:colorPrimary</item>
        <item name="android:navigationBarColor">?android:colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:autoLink">web</item>
        <item name="android:background">@drawable/buttonbg</item>
        <item name="android:clickable">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">80px</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SideMenuBtn" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">#738F73</item>
        <item name="strokeColor">#738F73</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">#33738F73</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ProfileTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="updateBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>